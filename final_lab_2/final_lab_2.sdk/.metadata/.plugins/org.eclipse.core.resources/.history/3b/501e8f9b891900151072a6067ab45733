#include "xparameters.h"
#include "xgpio.h"
#include "xutil.h"
  

//====================================================

int main (void) 
{

    XGpio led, button,key;
	int button_check=0;
	int key_check=0;
	int counter=0;
	
    xil_printf("-- Start of the Program --\r\n");
 
    XGpio_Initialize(&key, XPAR_SWITCH_DEVICE_ID);
	XGpio_SetDataDirection(&key, 1, 0xffffffff);

	XGpio_Initialize(&button, XPAR_BUTTON_DEVICE_ID);
	XGpio_SetDataDirection(&button, 1, 0xffffffff);

	XGpio_Initialize(&led, XPAR_LED_DEVICE_ID);
	XGpio_SetDataDirection(&led, 0, 0x00000000);
	
	
	while (1)
	{
		while(!button_check && !key_check)
		{
			button_check = XGpio_DiscreteRead(&button, 1);
			key_check = XGpio_DiscreteRead(&key, 1);
		}
		if(button_check)
		{
			if(counter>=3)
			{
				counter=0;
			}
			else
			{
				counter++;
			}
			if(counter==0)
			{
				XGpio_DiscreteWrite(&led,1,0xffffffff);
			}
			else if(counter==1)
			{
				XGpio_DiscreteWrite(&led,1,0xffffffff);
			}
			else if(counter==2)
			{
				XGpio_DiscreteWrite(&led,1,0xffffffff);
			}
			else if(counter==3)
			{
				XGpio_DiscreteWrite(&led,1,0xffffffff);
			}
		}
		else if(key_check)
		{
			XGpio_DiscreteWrite(&led,1,0xffffffff);			}
		}

		key_check=0;
		button_check=0;
	}
 
